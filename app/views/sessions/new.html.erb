<div class="container">
  <h1>Sign In</h1>

  <%= form_for :session, url: sessions_path do |f| %>
    <p>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </p>
    <p>
      <%= f.submit "Sign In" %>
    </p>
  <% end %>

  <div class="errors_explanation">
    <% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    <% end %>
  </div>

</div>
